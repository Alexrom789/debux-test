{
  "manifest_version": 2,

  "name": "debux-test",
  "description": "test devtool",
  "version": "1.0",

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },

  "permissions": [
    "*://*/*",
    "tabs",
    "http://*/*",
    "https://*/*",
    "file:///*"
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    "/installHook.js"
  ],
  "content_scripts" : [
    {
      "matches" : ["<all_urls>"],
      "js" : ["content-script.js"]
    }
  ]
}
